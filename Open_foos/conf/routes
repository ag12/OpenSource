# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
#*      /                module:secure




# Home page
GET     /                                           Application.index
GET     /main                                       Application.main_page


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}


# Player pages

GET     /players/profile/{username}                 Players.profile(username: String)
GET     /players/settings                           Players.settings



#  Team pages 


GET     /teams/profile/{teamname}                   Teams.profile(teamname: String)
GET     /teams/settings                            Teams.settings